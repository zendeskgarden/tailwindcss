{
  "extends": ["@zendeskgarden", "@zendeskgarden/eslint-config/plugins/notice", "prettier"],
  "parserOptions": {
    "requireConfigFile": false
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["@zendeskgarden/eslint-config/plugins/typescript", "prettier"]
    }
  ],
  "rules": {
    "sort-imports": [1, { "allowSeparatedGroups": true }]
  }
}
